<UserControl x:Class="BGProj.ucMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="450">
    <Grid>
        <Border BorderBrush="SaddleBrown" Background="SandyBrown" BorderThickness="2" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            
        </Border>
        
        <Viewbox Stretch="Uniform">
            <Label Name="Meddelande" Foreground="SaddleBrown" Content="Message" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        </Viewbox>
            
    </Grid>
</UserControl>
